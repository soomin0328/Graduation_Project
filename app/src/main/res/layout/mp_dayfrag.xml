<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/colorSplash" />

    <Button
        android:id="@+id/md_previous_calendar"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/mdptoday"
        android:layout_weight="1"
        android:background="@drawable/left"
        android:text="" />

    <TextView
        android:id="@+id/md_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/md_previous_calendar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="2018"
        android:textColor="#fffff3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/md_next_calendar"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/md_previous_calendar"
        android:layout_toStartOf="@+id/mdptoday"
        android:layout_weight="1"
        android:background="@drawable/right"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="left"
            android:text=" 명상 시간대"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Tv_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left"
            android:text=" 시간"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="9"
            android:gravity="center" />

        <ListView
            android:id="@+id/listview_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="81dp"
        android:text="일 총 시간:"
        android:textColor="#fffff3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/daytotaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="10sp"
        android:layout_toEndOf="@+id/textView5"
        android:text="##시간 ##분 ##초"
        android:textColor="#fffff3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="29dp"
        android:text="하루명상시간:"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/ws_hour"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textView7"
        android:text="##시간 ##분 ##초"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/mdptoday"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/wteduri"
        android:text="today"
        android:textColor="#fffff3"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="명상"
        android:textColor="#fffff3"
        android:textSize="17sp" />

</RelativeLayout>