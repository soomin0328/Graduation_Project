<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/daytotaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/wtv1"
        android:layout_marginStart="89dp"
        android:text="##시간 ##분 ##초"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_clickpercent"
        android:layout_width="59dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv4"
        android:layout_marginStart="112dp"
        android:layout_marginTop="-54dp"
        android:text="##%"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/w_previous_calendar"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/w_next_calendar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_weight="1"
        android:background="@drawable/left"
        android:text="" />

    <TextView
        android:id="@+id/w_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="2018년 몇월"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/w_next_calendar"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="76dp"
        android:layout_weight="1"
        android:background="@drawable/right"
        android:text="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="시간대"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Tv_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="상태"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview_1"
            android:layout_width="246dp"
            android:layout_height="300dp"
            android:layout_weight="4"
            android:gravity="center" />

        <ListView
            android:id="@+id/listview_2"
            android:layout_width="122dp"
            android:layout_height="51dp"
            android:layout_weight="2"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/wtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-80dp"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/w_previous_calendar"
        android:text="일 총 시간:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/wtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wtv1"
        android:layout_marginEnd="-80dp"
        android:layout_toStartOf="@+id/w_previous_calendar"
        android:text="달성율:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/wcptoday"
        android:layout_width="63dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="today"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="20dp"
        android:text="하루공부시간: "
        android:textSize="18dp" />

    <ProgressBar
        android:id="@+id/wprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="268dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="43dp"
        android:layout_marginTop="65dp"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/ws_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv4"
        android:layout_toEndOf="@+id/w_previous_calendar"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginBottom="27dp"
        android:text="하루달성률"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/wbarPercent"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/wtv1"
        android:layout_marginStart="-28dp"
        android:layout_toEndOf="@+id/wprogressBar"
        android:text="20" />




</RelativeLayout>